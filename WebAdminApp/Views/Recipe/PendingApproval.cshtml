@model List<WebAdminApp.Models.Recipe>@{    ViewData["Title"] = "Danh sách cần duyệt";    Layout = "_Layout";}<div class="col-md-9 ms-sm-auto col-lg-10 px-4">    <main class="main-content">        <h3 class="mb-4">Danh sách công thức cần duyệt</h3>        <form asp-action="BulkApproveRecipes" method="post" id="bulkForm">            <div class="table-responsive">                <table class="table table-bordered">                    <thead>                        <tr>                            <th><input type="checkbox" id="selectAll" /> Chọn tất cả</th>                            <th>Số thứ tự</th>                            <th>Tên công thức</th>                            <th>Người tạo</th>                            <th>Trạng thái</th>                        </tr>                    </thead>                    <tbody>                        @if (Model != null && Model.Any())                        {                            int index = 1;                            foreach (var recipe in Model)                            {                                <tr>                                    <td><input type="checkbox" name="selectedRecipes" value="@recipe.recipeId" /></td>                                    <td>@index</td>                                    <td>@recipe.name</td>                                    <td>@recipe.description</td>                                    <td>                                        <span class="badge bg-warning text-dark">Chờ duyệt</span>                                    </td>                                </tr>                                index++;                            }                        }                        else                        {                            <tr>                                <td colspan="5" class="text-center">Không có công thức nào đang chờ duyệt.</td>                            </tr>                        }                    </tbody>                </table>            </div>            <button type="submit" class="btn btn-success">Duyệt đã chọn</button>            <!-- Nút chuyển sang trang Approved -->            <a href="@Url.Action("Approved", "Recipe")" class="btn btn-primary">Danh sách đã duyệt</a>        </form>    </main></div><script>    // Check / Uncheck all checkboxes    document.getElementById('selectAll').onclick = function () {        var checkboxes = document.getElementsByName('selectedRecipes');        for (var i = 0; i < checkboxes.length; i++) {            checkboxes[i].checked = this.checked;        }    };</script>